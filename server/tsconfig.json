{
  "compilerOptions": {
    // Module system and target for Node
    "target": "ES2020",
    "module": "commonjs",

    // Output
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,         // allow import express from "express"
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    // Typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Useful for Node
    "resolveJsonModule": true,
    "types": ["node"],

    // Source maps for debugging
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["index.ts", "routes/**/*.ts", "prisma/**/*.ts", "controllers/**/*.ts", "utils/**/*.ts"]
}